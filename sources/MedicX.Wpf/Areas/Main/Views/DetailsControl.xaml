<UserControl
    x:Class="DustInTheWind.MedicX.Wpf.Areas.Main.Views.DetailsControl"
    x:ClassModifier="internal"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="clr-namespace:DustInTheWind.MedicX.Common.Entities;assembly=DustInTheWind.MedicX.Common"
    xmlns:viewModels="clr-namespace:DustInTheWind.MedicX.Wpf.Areas.Medics.ViewModels"
    xmlns:views1="clr-namespace:DustInTheWind.MedicX.Wpf.Areas.Medics.Views"
    xmlns:views2="clr-namespace:DustInTheWind.MedicX.Wpf.Areas.Clinics.Views"
    xmlns:viewModels1="clr-namespace:DustInTheWind.MedicX.Wpf.Areas.MedicalEvents.ViewModels"
    xmlns:views3="clr-namespace:DustInTheWind.MedicX.Wpf.Areas.MedicalEvents.Views"

    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance viewModels:DetailsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <TextBlock
            Text="Nothing"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="25"
            Visibility="{Binding IsNoItemPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <ContentControl Content="{Binding Item}">

            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewModels:MedicViewModel}">
                    <views1:MedicView />
                </DataTemplate>

                <DataTemplate DataType="{x:Type entities:Clinic}">
                    <views2:ClinicView />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels1:ConsultationViewModel}">
                    <views3:ConsultationView />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels1:InvestigationViewModel}">
                    <views3:InvestigationView />
                </DataTemplate>

            </ContentControl.Resources>

        </ContentControl>

    </Grid>

</UserControl>