<UserControl
    x:Class="DustInTheWind.MedicX.Wpf.Views.StringListView"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:views="clr-namespace:DustInTheWind.MedicX.Wpf.Views"
    xmlns:viewModels="clr-namespace:DustInTheWind.MedicX.Wpf.ViewModels"

    mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance viewModels:StringListViewModel}">

    <StackPanel>
        <ItemsControl
            ItemsSource="{Binding Values}"
            Margin="0 4">

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=.}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <!--<Button Content="Add" Command="{Binding AddCommand}"/>
        <Button Content="Remove" Command="{Binding RemoveCommand}"/>-->

    </StackPanel>

</UserControl>
